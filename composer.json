{
	"name": "jeroen/website",
	"license": "proprietary",
	"description": "Website of Jeroen De Dauw",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@proton.me",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": "^7.2",
		"ext-iconv": "*",
		"ext-json": "*",
		"aptoma/twig-markdown": "~3.0",
		"jeroen/file-fetcher": "^6.0.0",
		"jeroen/file-fetcher-cache": "^1.0.0",
		"jeroen/file-fetcher-stopwatch": "^1.0.1",
		"michelf/php-markdown": "~1.8",
		"symfony/asset": "^5.0",
		"symfony/cache": "^5.0",
		"symfony/console": "^5.0",
		"symfony/dotenv": "^5.0",
		"symfony/flex": "^1.0",
		"symfony/framework-bundle": "^5.0",
		"symfony/monolog-bundle": "^3.3",
		"symfony/stopwatch": "^5.0",
		"symfony/swiftmailer-bundle": "^3.2",
		"symfony/translation": "^5.0",
		"symfony/twig-bundle": "^5.0",
		"symfony/yaml": "^5.0"
	},
	"require-dev": {
		"symfony/profiler-pack": "^1.0",
		"symfony/debug-pack": "*",
		"symfony/browser-kit": "^5.0",

		"phpunit/phpunit": "^8.5.0",

		"squizlabs/php_codesniffer": "~3.2",
		"slevomat/coding-standard": "~4.5",
		"mediawiki/mediawiki-codesniffer": "~28.0",

		"phpstan/phpstan": "~0.12.3"
	},
	"config": {
		"component-dir": "public/components",
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true,
		"allow-plugins": {
			"symfony/flex": true
		}
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"replace": {
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php71": "*",
		"symfony/polyfill-php70": "*",
		"symfony/polyfill-php56": "*"
	},
	"scripts": {
		"auto-scripts": {
			"cache:clear": "symfony-cmd",
			"assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
		},
		"post-install-cmd": [
			"@auto-scripts"
		],
		"post-update-cmd": [
			"@auto-scripts"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"id": "11CBJZ6AHBP7H6NMWSZ2KJ6642",
			"allow-contrib": false
		}
	}
}
